<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4"
    android:background="@drawable/fondo_rojo"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".StockInicial"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="top"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="96dp"
            android:layout_height="69dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="131dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/texto_aa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_codigoBarras"
            android:layout_width="250dp"
            android:layout_height="47dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_radius"
            android:ems="10"
            android:gravity="center"
            android:hint="Codigo de Barras"
            android:inputType="numberSigned"
            android:maxLength="24"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_finalizar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/button_ok"
            android:layout_marginRight="25dp"
            android:background="@drawable/border_correcto"
            android:gravity="center"
            android:text="FIN"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/boton_ok_j"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>