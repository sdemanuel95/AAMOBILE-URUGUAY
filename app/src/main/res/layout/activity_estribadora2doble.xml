<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:background="@drawable/fondo_rojo"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.tofitsolutions.armasdurasargentinas.Estribadora2Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_weight="0.3"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_datosUsuario"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/boton_tuerca" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_usuarioEA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Usuario"
                android:textColor="@android:color/background_light"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_ayudanteEA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Ayudante"
                android:textColor="@android:color/background_light"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_maquinaEA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Maquina"
                android:textColor="@android:color/background_light"
                android:textSize="21sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="30px"
        android:layout_weight="4"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/et_ItemEstribadora2"
                android:layout_width="210dp"
                android:layout_height="47dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_weight="3"
                android:background="@drawable/border_radius"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Lea el cÃ³digo del Item"
                android:inputType="text"
                android:maxLength="11"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_teclado"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:background="@drawable/keyboard" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_weight="5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/textView_LOTETEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="#LOTE"
                android:textColor="@color/colorAccent"
                android:textSize="21sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_PIEZATEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="#PIEZA"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="21sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_KGTEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="#KG"
                android:textColor="@color/colorAccent"
                android:textSize="21sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_weight="5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/textView_precintoA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="PRECINTOA"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_piezasPosiblesA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="#POSIBLE"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_kgPosibleA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="#POSIBLE"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_weight="5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/textView_precintoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="PRECINTOB"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_piezasPosiblesB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="#POSIBLE"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_kgPosibleB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="#POSIBLE"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_weight="5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/textView_TOTALTEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="TOTAL          "
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_piezasPosiblesTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="#PIEZAS"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_kgPosibleTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#KG"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_weight="5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="NOTIFICAR"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/et_cantidadADeclarar"
                android:layout_width="100sp"
                android:layout_height="47sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="0px"
                android:layout_weight="1"
                android:background="@drawable/border_radius"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Piezas"
                android:inputType="numberSigned"
                android:maxLength="11"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_NULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="21sp" />
            <CheckBox
                android:id="@+id/chkSubproduco"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="Subproducto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_weight="5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="PENDIENTE"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_piezasPendientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="#PIEZAS"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_kgPendientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#KG"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="4">



        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_weight="0.7"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_okEstribadora2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="30px"
            android:background="@drawable/boton_ok_j" />

        <Button
            android:id="@+id/bt_principalEstribadora2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/boton_principal" />

        <Button
            android:id="@+id/bt_cancelEstribadora2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30px"
            android:background="@drawable/boton_cancelar_x" />
    </LinearLayout>

</LinearLayout>
