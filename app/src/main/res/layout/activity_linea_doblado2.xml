<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="6"
    android:background="@drawable/fondo_rojo"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context="com.tofitsolutions.armasdurasargentinas.LineaDoblado2Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_weight="0.01"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_datosUsuario"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/boton_linea_doblado" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_usuarioEA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Usuario"
                android:textColor="@android:color/background_light"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_ayudanteEA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Ayudante"
                android:textColor="@android:color/background_light"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_maquinaEA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Maquina"
                android:textColor="@android:color/background_light"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_precintoA"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/border_radius"
                android:ems="10"
                android:gravity="center"
                android:hint="Precinto 1"
                android:inputType="text"
                android:maxLength="48"
                android:text=""
                android:textSize="16sp" />


        </LinearLayout>
        //pendiente  y a declarar



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVCantidadKGPrecintoText"
                    android:layout_width="250dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="KG PRECINTO : "
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVCantidadKGPrecinto"
                    android:layout_width="250dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVItemText"
                    android:layout_width="250dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="ITEM : "
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVItem"
                    android:layout_width="250dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVCantidadPendienteText"
                    android:layout_width="250dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="CANT. PENDIENTE : "
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVCantidadPendiente"
                    android:layout_width="250dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVCantidadPosibleText"
                    android:layout_width="200dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="CANT. POSIBLE : "
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Space3"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />





            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVCantidadPosible"
                    android:layout_width="221dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVCantidadADeclararText"
                    android:layout_width="200dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="CANT. A DECLARAR : "
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Space2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="text"
                    android:maxLength="48"
                    android:textSize="16sp"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/TVCantidadADeclarar"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_radius"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Kg"
                    android:inputType="text"
                    android:maxLength="48"
                    android:textSize="16sp"></EditText>


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Space"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="text"
                    android:maxLength="48"
                    android:textSize="16sp"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">



            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVKGADeclararText"
                    android:layout_width="250dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="KG A DECLARAR : "
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TVKGADeclarar"
                    android:layout_width="250dp"
                    android:layout_height="47dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="text"
                    android:maxLength="48"
                    android:text=""
                    android:textSize="16sp" />



            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_weight="0"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="30px"
            android:background="@drawable/boton_ok_j" />

        <Button
            android:id="@+id/bt_principal"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/boton_principal" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30px"
            android:background="@drawable/boton_cancelar_x" />
    </LinearLayout>
</LinearLayout>
