<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@drawable/fondo_rojo"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.tofitsolutions.armasdurasargentinas.ValidarChapaActivity">

    <TextView
        android:id="@+id/textView_Informativo"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:layout_weight="1"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editText_CodigoDeBarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Colada"
        android:layout_alignStart="@+id/editText_Colada"
        android:layout_below="@+id/textView_Exception"
        android:layout_marginTop="43dp"
        android:layout_weight="2"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal|center"
        android:hint="Codigo de Barras"
        android:inputType="numberSigned"
        android:maxLength="24"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorAccent" />



    <EditText
        android:id="@+id/editText_KgReal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_Colada"
        android:layout_alignStart="@+id/editText_Colada"
        android:layout_below="@+id/editText_kgReal"
        android:layout_marginTop="34dp"
        android:layout_weight="2"
        android:ems="10"
        android:gravity="center"
        android:hint="Cantidad real de material"
        android:inputType="numberSigned"
        android:maxLength="4"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_Finalizar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/button_ok"
            android:layout_alignLeft="@+id/editText_Colada"
            android:layout_alignStart="@+id/editText_Colada"
            android:layout_marginRight="25dp"
            android:background="@drawable/border_correcto"
            android:gravity="center"
            android:text="FIN"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button_ok"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignEnd="@+id/editText_Colada"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/editText_Colada"
            android:background="@drawable/boton_ok_j"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_Contador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

</LinearLayout>
