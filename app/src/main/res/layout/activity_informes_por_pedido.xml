<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.tofitsolutions.armasdurasargentinas.Informes_por_pedido_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_inicio"
        android:gravity="bottom|center_vertical|center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp">





        <LinearLayout


            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">


            <EditText
                android:id="@+id/et_Item"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_weight="0"
                android:background="@drawable/border_radius"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Lea el cÃ³digo del Pedido"
                android:inputType="text"
                android:maxLength="11"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radioProducido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_producido"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioPendiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_pendiente" />


                <RadioButton
                    android:id="@+id/radioTodos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/radio_todos" />

            </RadioGroup>

            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="129dp"
                android:layout_height="38dp"
                android:text="Consultar" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
